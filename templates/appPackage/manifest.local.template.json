{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.11/MicrosoftTeams.schema.json",
    "manifestVersion": "1.11",
    "version": "1.0.0",
    "id": "{{localSettings.teamsApp.teamsAppId}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "{{{localSettings.frontend.tabEndpoint}}}",
        "privacyUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/privacy",
        "termsOfUseUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/termsofuse"
    },
    "icons": {
        "color": "resources/color.png",
        "outline": "resources/outline.png"
    },
    "name": {
        "short": "CloudHR-local-debug",
        "full": "CloudHR-local-debug"
    },
    "description": {
        "short": "Short description of CloudHR-local-debug",
        "full": "Full description of CloudHR-local-debug"
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [],
    "configurableTabs": [
        {
            "configurationUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/config",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
            ]
        }
    ],
    "staticTabs": [
        {
            "entityId": "index",
            "name": "Learning",
            "contentUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/lessons",
            "websiteUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/lessons",
            "scopes": [
                "personal"
            ]
        },
        {
            
            "entityId": "surveyIndex",
            "name": "Surveys",
            "contentUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/surveys",
            "websiteUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/surveys",
            "scopes": [
                "personal"
            ]
            
        }
        ,
        {
            
            "entityId": "usersIndex",
            "name": "Users",
            "contentUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/users",
            "websiteUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/users",
            "scopes": [
                "personal"
            ]
            
        },
        {
            
            "entityId": "checklist-index",
            "name": "Checklist",
            "contentUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/list-check",
            "websiteUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/list-check",
            "scopes": [
                "personal"
            ]
            
        },
        {
            
            "entityId": "tab-index",
            "name": "Tab",
            "contentUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/tab",
            "websiteUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/tab",
            "scopes": [
                "personal"
            ]
            
        },
        {
            
            "entityId": "check-in-out-index",
            "name": "Check In Out",
            "contentUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/check-in-out",
            "websiteUrl": "{{{localSettings.frontend.tabEndpoint}}}{{{localSettings.frontend.tabIndexPath}}}/check-in-out",
            "scopes": [
                "personal"
            ]
            
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"    ],
    "devicePermissions": [
        "geolocation"
    ],
    "validDomains": [],
    "webApplicationInfo": {
        "id": "{{localSettings.auth.clientId}}",
        "resource": "{{{localSettings.auth.applicationIdUris}}}"
    }
}